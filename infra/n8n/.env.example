# n8n Configuration
# Copy to .env and fill in values

# ===================
# Security (Required)
# ===================
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=
N8N_JWT_SECRET=

# Basic Auth
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=

# ===================
# Database
# ===================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ===================
# Redis
# ===================
REDIS_HOST=redis
REDIS_PORT=6379

# ===================
# n8n Settings
# ===================
# Production: https://n8n.your-domain.com
N8N_WEBHOOK_URL=http://localhost:5678
N8N_HOST=localhost
N8N_PROTOCOL=http

# Execution mode: regular (default) or queue (production)
N8N_EXECUTIONS_MODE=regular

# Timezone
TIMEZONE=Asia/Shanghai

# ===================
# Service URLs (Internal)
# ===================
AI_SERVICE_URL=http://ai:8001
CONTENT_SERVICE_URL=http://content:8002
RECSYS_SERVICE_URL=http://recsys:8003
ECOMMERCE_SERVICE_URL=http://ecommerce:8004
WEB3_SERVICE_URL=http://web3:8005

# ===================
# External Services
# ===================
OPENAI_API_KEY=
RESEND_API_KEY=
STRIPE_API_KEY=
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
