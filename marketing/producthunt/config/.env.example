# Product Hunt API Configuration
# Copy this to .env and fill in your credentials

# OAuth Application Credentials
# From: https://www.producthunt.com/v2/oauth/applications
PRODUCT_HUNT_API_KEY=your_api_key_here
PRODUCT_HUNT_API_SECRET=your_api_secret_here

# Developer Token (for automated scripts without user context)
# Create at: https://www.producthunt.com/v2/oauth/applications -> Create Token
PRODUCT_HUNT_DEV_TOKEN=your_dev_token_here

# Redirect URI (must match your OAuth application settings)
PRODUCT_HUNT_REDIRECT_URI=https://nebutra.com
