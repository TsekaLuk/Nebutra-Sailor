{
  "name": "@nebutra/custom-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Brand-specific UI components built on top of @nebutra/design-system - domain-specific, complex, and high-density UI",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "import": "./dist/primitives/index.js"
    },
    "./primitives/*": {
      "types": "./dist/primitives/*.d.ts",
      "import": "./dist/primitives/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./layouts/*": {
      "types": "./dist/layouts/*.d.ts",
      "import": "./dist/layouts/*.js"
    },
    "./widgets/*": {
      "types": "./dist/widgets/*.d.ts",
      "import": "./dist/widgets/*.js"
    },
    "./marketing": {
      "types": "./dist/marketing/index.d.ts",
      "import": "./dist/marketing/index.js"
    },
    "./marketing/*": {
      "types": "./dist/marketing/*.d.ts",
      "import": "./dist/marketing/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nebutra/design-system": "workspace:*",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.460.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.0.0",
    "next": "^16.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": ">=14.0.0",
    "@clerk/nextjs": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@clerk/nextjs": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
