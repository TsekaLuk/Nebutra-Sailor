# ============================================
# AI Providers Configuration
# ============================================

# Default Provider (siliconflow, openai, or openrouter)
DEFAULT_AI_PROVIDER=siliconflow

# SiliconFlow (Recommended for China / cost-effective)
# Get API key from: https://cloud.siliconflow.cn/account/ak
SILICONFLOW_API_KEY=sk-xxx
# Use international endpoint (api.siliconflow.com instead of api.siliconflow.cn)
SILICONFLOW_USE_INTERNATIONAL=false

# OpenAI
OPENAI_API_KEY=sk-xxx
OPENAI_ORGANIZATION=org-xxx

# OpenRouter (Unified API for 400+ models)
# Get API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-xxx
# App attribution (optional - for OpenRouter leaderboards)
OPENROUTER_HTTP_REFERER=https://your-app.com
OPENROUTER_APP_TITLE=Your App Name

# ============================================
# Optional: Other Providers
# ============================================

# Google Vertex AI (for enterprise plans)
GOOGLE_CLOUD_PROJECT=your-project
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# Infrastructure
# ============================================

# Redis (for caching)
REDIS_URL=redis://localhost:6379
