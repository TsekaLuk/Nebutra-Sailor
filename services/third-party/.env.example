# ===========================================
# Integrations Service Environment Variables
# ===========================================

# Service Configuration
SERVICE_NAME=third-party
SERVICE_PORT=8007
DEBUG=false

# Redis (Upstash)
UPSTASH_REDIS_URL=redis://default:xxx@xxx.upstash.io:6379

# ===========================================
# Product Hunt API
# ===========================================
# Get your credentials at: https://www.producthunt.com/v2/oauth/applications

# Developer Token (for client-credentials / server-side only access)
PRODUCT_HUNT_DEV_TOKEN=your_developer_token_here

# OAuth Credentials (for user-context access)
PRODUCT_HUNT_CLIENT_ID=your_client_id
PRODUCT_HUNT_CLIENT_SECRET=your_client_secret
PRODUCT_HUNT_REDIRECT_URI=https://your-app.com/auth/producthunt/callback

# API Configuration
PRODUCT_HUNT_API_URL=https://api.producthunt.com/v2/api/graphql

# Cache Configuration (seconds)
PH_CACHE_TTL_POSTS=3600
PH_CACHE_TTL_TOPICS=86400
PH_CACHE_TTL_COLLECTIONS=86400
PH_CACHE_TTL_TRENDING=1800

# Rate Limiting
PH_RATE_LIMIT_REQUESTS=100
PH_RATE_LIMIT_WINDOW=3600

# ===========================================
# Future Integrations (placeholders)
# ===========================================

# Twitter/X API
# TWITTER_BEARER_TOKEN=

# GitHub API
# GITHUB_TOKEN=

# HackerNews (no auth needed)
# HN_API_URL=https://hacker-news.firebaseio.com/v0
